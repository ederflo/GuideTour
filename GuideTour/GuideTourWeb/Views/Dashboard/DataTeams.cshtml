@model GuideTourWeb.Models.DashboardViewModels.DataTeamsDashboardViewModel
@{
    ViewData["Title"] = "DataTeams";
    Layout = "~/Views/Shared/_Layout_dashboard.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-12">
            <h1>Daten von Teams</h1>
        </div>
    </div>
    <hr />
    <div class="row text-white">
        <div class="col-12">
            <table id="teamDataTable" class="display bg-ternary-color">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Team t in Model.Teams)
                    {
                        <tr>
                            <td>@t.Id</td>
                            <td>@t.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>




@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#teamDataTable').DataTable();
        });
    </script>
}